{
  "name": "deep-research-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Monorepo for Next.js chat app and Mastra research agents",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=22.13.0"
  },
  "scripts": {
    "dev": "npm run dev --workspace @deep-research/web",
    "dev:web": "npm run dev --workspace @deep-research/web",
    "dev:mastra": "npm run dev --workspace @deep-research/mastra",
    "build": "npm run build --workspace @deep-research/web",
    "build:web": "npm run build --workspace @deep-research/web",
    "start": "npm run start --workspace @deep-research/web"
  },
  "devDependencies": {
    "@types/node": "^24.10.9",
    "typescript": "^5.9.3"
  }
}
